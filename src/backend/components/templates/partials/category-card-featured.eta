<div class="category-card-featured">
  <div class="head">
    <div>Featured Category</div>
  </div>
  <div class="body">
    <div><%= it?.name %>:</div>
    <div><%= it?.description %></div>
  </div>
  <div class="footer">
    <a href="/search/?q=&category=<%= it?.name?.toLocaleLowerCase() %>"><button>Explore <%= it?.name %></button></a>
  </div>
  <div class="background">
    <div class="mask">
      <img src="/images/<%= it?.image %>" alt="">
    </div>
  </div>
</div>
